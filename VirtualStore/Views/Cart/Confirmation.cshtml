@model VirtualStore.Order

@{
    ViewBag.Title = "Order confirmed";
}

<div class="store-title"><h2>Order Confirmed</h2></div>
<div class="store-card pad">

    <p><b>Order Number:</b> @Model.Id</p>
    <p><b>Date:</b> @Model.dateOrder</p>
    <p><b>Total:</b> @Html.DisplayFor(m => m.totalAmount)</p>
    <p><b>Status:</b> @Model.statusOrder</p>

    <div class="admin-actions center" style="margin-top:16px;">
        <a class="btn btn-brand btn-big" href="@Url.Action("Index","Products")">Back to products</a>
    </div>

</div>