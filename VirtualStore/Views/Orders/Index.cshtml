@model IEnumerable<VirtualStore.Order>

@{
    ViewBag.Title = "My Orders";
}

<div class="store-title">
    <h2>My Orders</h2>
</div>

@if (!Model.Any())
{
    <div class="store-card pad text-center" style="padding:40px; color:#8a94a6;">
        You have no orders yet.
    </div>
}
else
{
    foreach (var order in Model)
    {
        <div class="store-card pad order-card">
            <div style="display:flex; justify-content:space-between; align-items:flex-start;">
                <div>
                    <div style="font-weight:900; font-size:18px;">Order #@order.Id</div>
                    <div class="order-muted">@order.dateOrder</div>
                </div>

                <div style="text-align:right;">
                    <div class="order-muted" style="font-size:12px;">Stored Amount:</div>
                    <div class="order-money">€ @order.totalAmount</div>
                </div>
            </div>

            <div style="margin-top:10px;">
                <div><strong>User:</strong> @order.userName</div>
                <div><strong>Status:</strong> @order.statusOrder</div>

                <div style="margin-top:10px;">
                    @Html.ActionLink("View Details", "Details", new { id = order.Id }, new { @class = "btn btn-outline" })
                </div>
            </div>
        </div>
    }
}
