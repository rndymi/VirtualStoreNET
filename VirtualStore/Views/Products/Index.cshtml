@model IEnumerable<VirtualStore.Product>

@{
    ViewBag.Title = "Catalog";
}

<div class="store-title">
    <h2>Products</h2>
</div>

@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("New Product", "Create", null, new { @class = "btn btn-brand" })
    </p>
}

@if (TempData["CartError"] != null)
{
    <div class="alert alert-danger">@TempData["CartError"]</div>
}

<div class="product-grid">
    @foreach (var item in Model)
    {
        <div class="store-card product-card">
            @if (!string.IsNullOrWhiteSpace(item.imageProd))
            {
                <img src="@Url.Content(item.imageProd)"
                     alt="@item.nameProd"
                     class="product-image" />
            }
            else
            {
                <div class="product-image"></div>
            }

            <div class="product-name">@item.nameProd</div>
            <div class="product-price">€ @item.price</div>

            @if (item.stockProd <= 1 && item.stockProd > 0)
            {
                <div class="product-stock low">Stock available: @item.stockProd</div>
            }
            else
            {
                <div class="product-stock">Stock available: @item.stockProd</div>
            }

            <div style="margin-top:10px;">
                @Html.ActionLink("Details", "Details", new { id = item.Id },
                    new { @class = "btn btn-outline", style = "margin-right:6px;" })

                @if (User.IsInRole("Admin") && !item.isActiveProd)
                {
                    <button class="btn btn-danger-soft" disabled style="margin-left:0;">DISCONTINUED</button>
                }
                else if (item.stockProd <= 0)
                {
                    <button class="btn btn-outline" disabled>OUT OF STOCK</button>
                }
                else
                {
                    using (Html.BeginForm("AddToCart", "Cart", FormMethod.Post, new { style = "display:inline-block;" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("id", item.Id)
                        <button type="submit" class="btn btn-brand">Add to Cart</button>
                    }
                }
            </div>

            @if (User.IsInRole("Admin"))
            {
                <div style="margin-top:12px; font-size:12px;">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </div>
            }

        </div>
    }
</div>

