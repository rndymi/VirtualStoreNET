@model IEnumerable<VirtualStore.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Products</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </p>
}


<table class="table">
    <tr>
        <th>
            Image
        </th>
        <th>
            Product
        </th>
        <th>
            Description
        </th>
        <th>
            Price
        </th>
        <th>
            Stock
        </th>
        <th>
            Enabled
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (!string.IsNullOrWhiteSpace(item.imageProd))
                {
                    <img src="@Url.Content(item.imageProd)"
                         alt="@item.nameProd"
                         style="width:80px; height:auto;object-fit:cover;" />
                }
                else
                {
                    <span>Empty image</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nameProd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripProd)
            </td>
            <td>
                €
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stockProd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isActiveProd)
            </td>

            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |

                @if (item.stockProd > 0)
                {
                    @Html.ActionLink("Add to Cart", "AddToCart", "Cart", new { id = item.Id }, null)
                }
                else
                {
                    <span class="text-danger"><b>Out of stock</b></span>
                }

                |

                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) @: |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                }

            </td>
        </tr>
    }

</table>
