@model IEnumerable<VirtualStore.Product>

@{
    ViewBag.Title = "Catalog";
}

<div class="store-title">
    <h2>Products</h2>
</div>

@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-brand" })
    </p>
}

<div class="product-grid">
    @foreach (var item in Model)
     {
        <div class="store-card product-card">
            @if (!string.IsNullOrWhiteSpace(item.imageProd))
            {
                <img src="@Url.Content(item.imageProd)"
                     alt="@item.nameProd"
                     class="product-image" />
            }
            else
            {
                <div class="product-image"></div>
            }

            <div class="product-name">@item.nameProd</div>
            <div class="product-price">€ @item.price</div>

            @if (item.stockProd <= 1 && item.stockProd > 0)
            {
                <div class="product-stock low">Stock available: @item.stockProd</div>
            }
            else
            {
                <div class="product-stock">Stock available: @item.stockProd</div>
            }

            <div style="margin-top:10px;">
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-soft-outline", style = "margin-right:6px;" })

                @if (item.stockProd > 0)
                {
                    <a class="btn btn-brand" href="@Url.Action("AddToCart", "Cart", new { id = item.Id })">Add to Cart</a>
                }
                else
                {
                    <button class="btn btn-soft-outline" disabled>OUT OF STOCK</button>
                }
            </div>

            @if (User.IsInRole("Admin"))
            {
                <div style="margin-top:12px; font-size:12px;">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </div>
            }

        </div>
     }
</div>


