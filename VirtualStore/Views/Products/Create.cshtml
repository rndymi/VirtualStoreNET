@model VirtualStore.Product

@{
    ViewBag.Title = "Create Product";
}

<div class="page-title">
    <h2>Create Product</h2>
</div>

<div class="store-card pad">
    @using (Html.BeginForm("Create", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label> 
                Product name: 
            </label>
            @Html.TextBoxFor(m => m.nameProd, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.nameProd, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>
                Product description:
            </label>
            @Html.TextBoxFor(m => m.descripProd, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.descripProd, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>
                Price (€):
            </label>
            @Html.TextBoxFor(m => m.price, new { @class = "form-control", type = "number", step = "0.01", min = "0" })
            @Html.ValidationMessageFor(m => m.price, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>
                Stock quantity:
            </label>
            @Html.TextBoxFor(m => m.stockProd, new { @class = "form-control", type = "number", step = "1", min = "0" })
            @Html.ValidationMessageFor(m => m.stockProd, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>
                Category:
            </label>
            @Html.DropDownList("Category_Id", (SelectList)ViewBag.Category_Id, "-- Select Category --", new { @class = "form-control" })
            @Html.ValidationMessage("Category_Id", "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>Product image</label>
            <input type="file" name="imageFile" class="form-control" accept=".png,.jpg,.jpeg,.webp" />
            @if (ViewBag.ImageError != null)
            {
                <span class="text-danger">@ViewBag.ImageError</span>
            }
        </div>

        <div class="form-group">
            <label style="display:block;">
                @Html.CheckBoxFor(m => m.isActiveProd) Active
            </label>
            @Html.ValidationMessageFor(m => m.isActiveProd, "", new { @class = "text-danger" })
        </div>

        @Html.HiddenFor(m => m.imageProd)

        <div style="display:flex; gap:10px; margin-top:15px;">
            <button type="submit" class="btn btn-brand">Create</button>
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline" })
        </div>
    }
</div>