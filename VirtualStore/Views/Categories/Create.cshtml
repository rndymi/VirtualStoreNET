@model VirtualStore.Category
@{
    ViewBag.Title = "Create Category";
}

<div class="page-title"><h2>Create Category</h2></div>

<div class="store-card pad">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="admin-form-grid">
            <div>
                <label class="admin-label">Name</label>
                @Html.TextBoxFor(m => m.nameCate, new { @class = "admin-input" })
                @Html.ValidationMessageFor(m => m.nameCate, "", new { @class = "text-danger" })
            </div>

            <div>
                <label class="admin-label">Description</label>
                @Html.TextBoxFor(m => m.descripCate, new { @class = "admin-input" })
            </div>

            <div class="admin-check">
                @Html.CheckBoxFor(m => m.isActiveCate)
                <span style="font-weight:800;">Active</span>
            </div>
        </div>

        <div class="admin-actions" style="justify-content:flex-start; margin-top:14px;">
            <button class="btn btn-brand" type="submit">Create</button>
            @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-outline", style = "margin-left:10px;" })
        </div>
    }
</div>