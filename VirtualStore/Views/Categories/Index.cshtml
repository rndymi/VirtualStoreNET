@model IEnumerable<VirtualStore.Category>
@{
    ViewBag.Title = "Manage Categories";
}

<div class="admin-header">
    <h2 class="store-title">
        <strong>
            Manage Categories
        </strong>
    </h2>

    <a class="btn btn-outline"
       href="@Url.Action("Index","Manage")">
        Back to AdminPanel
    </a>
</div>

@if (TempData["Error"] != null)
{
    <div class="text-danger" style="margin-bottom:10px;">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="text-success" style="margin-bottom:10px;">@TempData["Success"]</div>
}

<div class="store-card pad">
    <div style="display:flex; justify-content:space-between; align-items:center; gap:10px;">
        @Html.ActionLink("Create Category", "Create", null, new { @class = "btn btn-brand" })
    </div>

    <table class="table-clean table-card" style="margin-top:12px;">
        <thead>
            <tr>
                <th class="col-product">Name</th>
                <th class="col-product">Description</th>
                <th class="col-center">Active</th>
                <th class="col-actions"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td class="col-product">@c.nameCate</td>
                    <td class="col-product">@c.descripCate</td>
                    <td class="col-center">@(c.isActiveCate ? "Yes" : "No")</td>
                    <td class="col-actions">
                        @Html.ActionLink("Edit", "Edit", new { id = c.Id }, new { @class = "btn btn-outline btn-small" })
                        @Html.ActionLink("Delete", "Delete", new { id = c.Id }, new { @class = "btn btn-danger-soft btn-small", style = "margin-left:8px;" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>